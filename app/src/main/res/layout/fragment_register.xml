<?xml version="1.0" encoding="utf-8"?>
<!-- 註冊頁面：標籤固定寬度 96dp，右側輸入框自動撐滿，驗證圖標在輸入框右側 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="註冊新帳號"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 帳號（同排，標籤固定寬，右側圖標在輸入框內） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_account"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="帳號："
            android:textColor="#333333"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="帳號"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:paddingEnd="40dp" />

            <ImageView
                android:id="@+id/icon_account_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="帳號狀態圖示"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- 密碼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_password"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="密碼："
            android:textColor="#333333"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="密碼"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingEnd="40dp" />

            <ImageView
                android:id="@+id/icon_password_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="密碼狀態圖示"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- 郵件信箱 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_email"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="郵件信箱："
            android:textColor="#333333"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="郵件信箱"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:paddingEnd="40dp" />

            <ImageView
                android:id="@+id/icon_email_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="Email狀態圖示"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- 手機 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_phone"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="手機："
            android:textColor="#333333"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="手機"
                android:inputType="phone"
                android:padding="12dp"
                android:paddingEnd="40dp" />

            <ImageView
                android:id="@+id/icon_phone_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="手機狀態圖示"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- 地址 (縣市 + 行政區) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- 左側標籤 -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="地址："
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- 右側縣市 + 行政區（橫排） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinner_district"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- 授權碼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_device_password"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="授權碼："
            android:textColor="#333333"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_device_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="授權碼"
                android:inputType="textCapCharacters"
                android:padding="12dp"
                android:paddingEnd="40dp" />

            <ImageView
                android:id="@+id/icon_device_password_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="授權碼狀態圖示"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- 推薦碼（選填） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推薦碼（選填）"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextReferralCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="請輸入推薦碼（例如：TIMMY888）"
        android:inputType="textCapCharacters"
        android:maxLength="20"
        android:padding="12dp" />

    <!-- 註冊按鈕 -->
    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="註冊"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
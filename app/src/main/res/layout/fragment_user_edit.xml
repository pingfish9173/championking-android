<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 標題 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用戶資訊"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- 帳號 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="帳號："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#111111"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="信箱："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#111111"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 手機 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="手機："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#111111"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 地址（縣市 行政區） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="地址："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icon_address_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="顯示/隱藏地址"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- 授權碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="授權碼："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_authorization_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icon_auth_code_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="顯示/隱藏授權碼"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- 消費模式（點數制 / 租賃制） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="消費模式："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <!-- 值：限制寬度，不撐滿 -->
            <TextView
                android:id="@+id/text_billing_mode"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="16sp" />

            <!-- ℹ️ -->
            <ImageView
                android:id="@+id/icon_billing_mode_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_info"
                android:contentDescription="租賃制資訊"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:tint="@color/blue_500" />
        </LinearLayout>

        <!-- 按鈕區域（變更密碼 & 解除裝置綁定） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <!-- 變更密碼 -->
            <Button
                android:id="@+id/button_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="變更密碼"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

            <!-- 間距 -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- 解除裝置綁定 -->
            <Button
                android:id="@+id/button_unbind_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解除裝置綁定"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- 應用程式版本區塊 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="應用程式版本"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- 當前版本 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="當前版本："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_current_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#111111"
                android:textSize="16sp"
                android:text="1.0.1" />
        </LinearLayout>

        <!-- 上次檢查時間 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="上次檢查："
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_last_check_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="尚未檢查" />
        </LinearLayout>

        <!-- 檢查更新按鈕 -->
        <Button
            android:id="@+id/button_check_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="檢查更新"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="start"
            android:layout_marginBottom="12dp" />

        <!-- 自動檢查更新 -->
        <CheckBox
            android:id="@+id/checkbox_auto_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自動檢查更新"
            android:textSize="14sp"
            android:textColor="#666666"
            android:checked="true" />

    </LinearLayout>
</ScrollView>
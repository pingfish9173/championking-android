<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 標題 + Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 左側標題 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="公告"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- 右側三個頁籤 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 更新紀錄 Tab -->
            <LinearLayout
                android:id="@+id/tab_update_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_update_log_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新紀錄"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_update_log_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- 關於平板 Tab -->
            <LinearLayout
                android:id="@+id/tab_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_about_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="關於平板"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_about_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- 免責聲明 Tab -->
            <LinearLayout
                android:id="@+id/tab_disclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_disclaimer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免責聲明"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_disclaimer_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Scroll 區塊（動態切換） -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.35"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 標題 + Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 左側標題 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="更新紀錄"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- 右側頁籤 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 更新紀錄 Tab -->
            <LinearLayout
                android:id="@+id/tab_update_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_update_log_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新紀錄"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_update_log_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- 功能介紹 Tab -->
            <LinearLayout
                android:id="@+id/tab_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_features_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能介紹"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_features_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- 聯絡我們 Tab -->
            <LinearLayout
                android:id="@+id/tab_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_contact_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聯絡我們"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_contact_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- 遊戲協議 Tab -->
            <LinearLayout
                android:id="@+id/tab_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_about_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="遊戲協議"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_about_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- 免責聲明 Tab -->
            <LinearLayout
                android:id="@+id/tab_disclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tab_disclaimer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免責聲明"
                    android:textSize="18sp"
                    android:textColor="#444444" />

                <View
                    android:id="@+id/tab_disclaimer_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF6B35"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- 內容區域 - 使用 FrameLayout 來疊放三個 ScrollView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 更新紀錄的 ScrollView -->
        <ScrollView
            android:id="@+id/content_scroll_update_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/content_text_update_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.35"
                android:padding="8dp" />
        </ScrollView>

        <!-- 功能介紹的 ScrollView -->
        <ScrollView
            android:id="@+id/content_scroll_features"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/content_text_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.4"
                android:padding="12dp" />
        </ScrollView>

        <!-- 聯絡我們的 ScrollView -->
        <ScrollView
            android:id="@+id/content_scroll_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/contact_qr"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/line_qr"
                    android:contentDescription="LINE QRCode" />

                <TextView
                    android:id="@+id/contact_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="掃取官方Line：@376xyozd\n小編會第一時間為您服務唷～"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:lineSpacingMultiplier="1.25"
                    android:gravity="center" />
            </LinearLayout>
        </ScrollView>

        <!-- 遊戲協議的 ScrollView -->
        <ScrollView
            android:id="@+id/content_scroll_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/content_text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.35"
                android:padding="8dp" />
        </ScrollView>

        <!-- 免責聲明的 ScrollView -->
        <ScrollView
            android:id="@+id/content_scroll_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/content_text_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.35"
                android:padding="8dp" />
        </ScrollView>

    </FrameLayout>

</LinearLayout>